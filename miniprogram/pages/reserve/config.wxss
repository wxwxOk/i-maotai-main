/* pages/reserve/config.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 140rpx;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.section-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 24rpx;
}

.item-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.item-card {
  width: calc(50% - 10rpx);
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  position: relative;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.item-card.selected {
  border-color: #c41230;
  background: #fff5f7;
}

.item-image {
  width: 100%;
  height: 160rpx;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.item-info {
  text-align: center;
}

.item-name {
  font-size: 24rpx;
  color: #333;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-price {
  font-size: 26rpx;
  color: #c41230;
  font-weight: bold;
  margin-top: 8rpx;
  display: block;
}

.check-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #c41230;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.radio-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.radio-item:last-child {
  border-bottom: none;
}

.radio-content {
  flex: 1;
  margin-left: 16rpx;
}

.radio-title {
  font-size: 28rpx;
  color: #333;
  display: block;
}

.radio-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.time-picker {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.time-prefix {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.picker-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #c41230;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}

.picker-arrow {
  font-size: 24rpx;
  margin-left: 10rpx;
  color: #999;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.switch-label {
  font-size: 28rpx;
  color: #333;
}

.switch-desc {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.save-btn {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #c41230 0%, #a00e28 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 48rpx;
}

.save-btn::after {
  border: none;
}

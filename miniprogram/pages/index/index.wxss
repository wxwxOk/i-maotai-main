/* pages/index/index.wxss */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.header {
  background: linear-gradient(135deg, #c41230 0%, #a00e28 100%);
  padding: 40rpx 30rpx;
  color: #fff;
}

.header .title {
  font-size: 36rpx;
  font-weight: bold;
}

.header .date {
  display: block;
  font-size: 26rpx;
  margin-top: 10rpx;
  opacity: 0.8;
}

.account-list {
  padding: 20rpx;
}

.account-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.account-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.mobile {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.status.success {
  background: #e8f5e9;
  color: #4caf50;
}

.status.pending {
  background: #fff3e0;
  color: #ff9800;
}

.status.failed {
  background: #ffebee;
  color: #f44336;
}

.item-list {
  padding: 20rpx 0;
}

.item-row {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.item-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.item-status {
  display: flex;
  align-items: center;
}

.status-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.status-icon.pending {
  color: #ff9800;
}

.status-icon.success {
  color: #4caf50;
}

.status-icon.failed {
  color: #f44336;
}

.status-icon.win {
  color: #c41230;
}

.status-text {
  font-size: 24rpx;
  color: #666;
}

.account-footer {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.shop-name {
  font-size: 24rpx;
  color: #999;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.reserve-time {
  font-size: 24rpx;
  color: #999;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.add-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #c41230 0%, #a00e28 100%);
  color: #fff;
  padding: 24rpx 60rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 20rpx rgba(196, 18, 48, 0.3);
}

.add-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.add-text {
  font-size: 30rpx;
}

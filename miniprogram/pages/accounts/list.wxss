/* pages/accounts/list.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.header {
  background: linear-gradient(135deg, #c41230 0%, #a00e28 100%);
  padding: 40rpx 30rpx;
  color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.8;
  margin-top: 10rpx;
  display: block;
}

.account-list {
  padding: 20rpx;
}

.account-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.account-info {
  flex: 1;
}

.mobile-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.mobile {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.status-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.status-tag.normal {
  background: #e8f5e9;
  color: #4caf50;
}

.status-tag.expired {
  background: #ffebee;
  color: #f44336;
}

.location {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.location .icon {
  margin-right: 8rpx;
}

.location .warn {
  color: #ff9800;
}

.arrow {
  font-size: 40rpx;
  color: #ccc;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

.add-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #c41230 0%, #a00e28 100%);
  color: #fff;
  padding: 24rpx 60rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 20rpx rgba(196,18,48,0.3);
}

.add-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.add-text {
  font-size: 30rpx;
}

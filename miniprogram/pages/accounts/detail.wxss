/* pages/accounts/detail.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.status-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.status-tag.normal {
  background: #e8f5e9;
  color: #4caf50;
}

.status-tag.expired {
  background: #ffebee;
  color: #f44336;
}

.action-btn {
  font-size: 26rpx;
  color: #c41230;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
  max-width: 400rpx;
  text-align: right;
}

.value.expired-text {
  color: #f44336;
}

.empty-tip {
  padding: 30rpx;
  text-align: center;
  color: #999;
  font-size: 26rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.actions {
  margin-top: 40rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 44rpx;
  margin-bottom: 20rpx;
  background: #f5f5f5;
  color: #333;
}

.btn.primary {
  background: linear-gradient(135deg, #c41230 0%, #a00e28 100%);
  color: #fff;
}

.btn.danger {
  background: #fff;
  color: #f44336;
  border: 1rpx solid #f44336;
}

.btn::after {
  border: none;
}

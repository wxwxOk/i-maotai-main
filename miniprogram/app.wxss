/* app.wxss */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
}

/* 通用样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 按钮重置 */
button {
  margin: 0;
  padding: 0;
  background: transparent;
  border: none;
  border-radius: 0;
  font-size: inherit;
  line-height: inherit;
}

button::after {
  border: none;
}

/* 输入框 */
input {
  font-size: 28rpx;
}

/* 图片 */
image {
  display: block;
}
